programa
{
   real resultado, num1, num2
    	
	funcao inicio()
  {
		   inteiro opcao
		
       escreva("CALCULADORA\n")
       escreva("1) ADIÇÃO \n")
       escreva("2) SUBTRAÇÃO\n")
	     escreva("3) MULTIPLICAÇÃO\n")
	     escreva("4) DIVISÃO\n")
	
	     escreva("Informe a opção que deseja: ")
	     leia (opcao)
	
	     limpa()
	
	     escreva("Informe um primeiro valor: ")
	     leia(num1)
	     escreva("Informe um segundo valor: ")
	     leia(num2)
	
	     escolha (opcao)
	     {
            	caso 1:
            		escreva(soma(num1, num2))
            	pare
            	caso 2:
            		escreva(subtracao(num1, num2))
            	pare
           	  caso 3:
            		escreva(multiplicacao(num1, num2))
            	pare
            	caso 4:
            		escreva(divisao(num1, num2))
            	pare
            	caso contrario:
            		escreva("Opção inválida!")
	     }
	     escreva("\n")
	 }

 funcao real soma(real N1, real N2)
 {	
        resultado = N1 + N2
        retorne resultado
 }

 funcao real subtracao(real N1, real N2)
 {
    		resultado = N1 - N2
    		retorne resultado
 }

 funcao real multiplicacao(real N1, real N2)
 {
      resultado = N1 * N2
      retorne resultado
 }

 funcao real divisao(real N1, real N2)
 {
      resultado = N1 / N2
      retorne resultado
 }
}
