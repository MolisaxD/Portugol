funcao relatorio()// essa função será responsável por gerar o relatório sobre os empréstimos dos livros
    {
     escreva("\nInforme quantos livros o cliente escolheu(Quantidade máxima de livros = 3 livros) : ")
     leia(qtdLivros)
      se (qtdLivros <= 3){
    	     escreva("\nEmpréstimo de livros foi permitido ao cliente\n")
