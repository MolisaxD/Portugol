      senao{
      	escreva("\nO cliente excedeu o número de livros permitido\n")
      }
         escreva("\nInforme por quanto tempo o cliente ficou com o(s) livro(s)(Quantidade máxima de dias = 7 dias):\n ")
         leia(dias)
         se (dias <= 7){
    	    escreva("\nO cliente esteve no limite de dias permitido\n")
    }
      senao{
      	escreva("\nO cliente excedeu o número de dias permitido")
