programa
{
	
    cadeia  sair, senha,usuario, voltarlogin, opcao
    
  
    
       //LOGIN
    funcao inicio(){
    escreva("\nLogin")
    escreva("\nDigite o seu login: ")
    leia(usuario)
    escreva("\nDigite sua senha: ")
    leia(senha)
    limpa()
    se ((usuario == "adm") e (senha =="senai")){
    	   menu()
    }senao {
    	escreva("\nNome de usuario ou senha incoreta")
    	escreva("\nDeseja voltar: \nsim \nnao\n")
    	leia(voltarlogin)
    	limpa()
    	se (voltarlogin == "sim"){
    		inicio()
    	}
    	se (voltarlogin == "nao"){
    		escreva("\n")
    	}
    }
    }
       //MENU 
    funcao menu(){
     
    escreva("Bem-vindo\n")
    escreva("1 - \n")
    escreva("2 - \n")
    escreva("3 -\n")
    escreva("4 - \n")
    escreva("5 - \n")
    escreva("6 - \n")
    escreva(" \n")
    leia(opcao)

    limpa()
    }}


